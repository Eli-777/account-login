<div class="container">
  <div class="m-5"> 
    <center>
      <h1>Account Login</h1>
    </center>
  </div>
  <form method="POST" action="/">
    <div class="row justify-content-center">
      <div class="form-group col-6">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Enter email" value="{{options.email}}" name="email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      
    </div>
    <div class="row justify-content-center">
      <div class="form-group col-6">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value="{{options.password}}" name="password">
      </div>
    </div>

    {{#if login}}
    <div class="row justify-content-center">
      <div class="row alert alert-info justify-content-center col-6" role="alert">
        <code>{{login}}</code>
      </div>
    </div>
    {{/if}}

    <div class="row justify-content-center">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

